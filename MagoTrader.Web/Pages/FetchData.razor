@page "/fetchdata"
@inherits FetchDataController

<h1>Cryptocurrency forecast</h1>

<p>This component demonstrates fetching data from third party.</p>

@if (forecasts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Open</th>
                <th>High</th>
                <th>Low</th>
                <th>Close</th>
                <th>Volume</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in forecasts)
            {
                <tr>
                    <td>@forecast.DateTime.ToShortDateString()</td>
                    <td>@forecast.Open</td>
                    <td>@forecast.High</td>
                    <td>@forecast.Low</td>
                    <td>@forecast.Close</td>
                    <td>@forecast.Volume</td>
                </tr>
            }
        </tbody>
    </table>
}

